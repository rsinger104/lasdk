<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    >
        <LinearLayout
	        android:id="@+id/assist_video_content"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
        	android:orientation="vertical"
		/>
		<ProgressBar 
		    android:id="@+id/assist_video_progress"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:indeterminate="true"
		    android:layout_centerInParent="true"
		/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/video_buttons_area_background"
    >        
       
        <Button
            android:id="@+id/assist_menu_button"
            android:layout_width="64dp" 
            android:layout_height="32dp"
            android:minHeight="32dp"
            android:layout_alignParentLeft="true"	
            android:background="@drawable/assist_menu_button"
            android:paddingBottom="2dp"
            />
         
	    <Button
	        android:id="@+id/assist_video_end"
            android:layout_width="64dp" 
            android:layout_height="32dp"
            android:minHeight="32dp"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/assist_end_button"	
            android:paddingBottom="2dp"
	     />
	    
	</RelativeLayout>
</LinearLayout>